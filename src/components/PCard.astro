---
import { Image } from "astro:assets";

export interface Props {
    projectName: string;
    projectDescription: string;
    projectLink: string;
    projectImage: string;
}
const { projectName, projectDescription, projectLink, projectImage } = Astro.props;
---

<a class="card ml-8" href={projectLink}>
<div class="max-w-sm rounded overflow-hidden _shadow-lg">
    <Image src={projectImage} class="w-full" width="256" height="256" alt="Project Image" />
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{ projectName }</div>
      <p class="text-gray-400 text-base">
        { projectDescription }
      </p>
    </div>
  </div>
</a>

<style>
    .ml-8 {
        transition: transform 0.2s;
    }

    .ml-8:hover {
        transform: scale(1.05);
    }
</style>